{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open Farmbot",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "cd Smile Farmbot && python main.py"
      ],
      "options": {
        "cwd": "${workspaceFolder}/../backend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",  
        "close": true        
      }
    },
    {
      "label": "Open Backend",
      "type": "shell",
      "command": "code",
      "args": [
        "${workspaceFolder}/../backend"
      ],
      "group":{
        "kind": "none",
        "isDefault": false
      },
      "problemMatcher": [],
      "detail":"Opens the backend side for the website within vscode",
      "presentation": {
        "reveal": "silent",  
        "close": true        
      }
    },
    {
      "label": "Open Json",
      "type": "shell",
      "command": "code",
      "args": [
        "${workspaceFolder}/dbManagement/jsons/${input:jsonFile}.json"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "close":true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Open Json Eza",
      "type": "shell",
      "command": "code",
      "args": [
        "${workspaceFolder}/dbManagement/jsonsEZA/${input:jsonFile}.json"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "close":true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Open Json Super Eza",
      "type": "shell",
      "command": "code",
      "args": [
        "${workspaceFolder}/dbManagement/jsonsSEZA/${input:jsonFile}.json"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "close":true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },

    {
      "label": "Use new database",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Expand database",
        "Convert files and create Jsons"
      ],
      "problemMatcher": []
    },

    {
      "label": "Expand database",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "python",
        "Database expander.py"
      ],
      "problemMatcher": [],
      "presentation": {
        "close": true,
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}/../backend",
        "statusbar": {
          "hide": true
        }
      }
    },

    {
      "label": "Convert files",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "python",
       "Convert files.py"
      ],
      "problemMatcher": [],
      "presentation": {
        "close":true,
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}/../backend",
        "statusbar": {
          "hide" : true
        }
      }
    },

    {
      "label": "Create jsons",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "python",
        "dokkan Json creator.py"
      ],
      "problemMatcher": [],
      "presentation": {
        "close":true,
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}/../backend",
        "statusbar": {
          "hide" : true
        }
      }
    },

    {
      "label": "Create unique Jsons",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "python",
        "uniqueJsonCreator.py"
      ],
      "problemMatcher": [],
      "presentation": {
        "close":true,
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}/../backend",
        "statusbar": {
          "hide" : true
        }
      }
    },

    {
      "label": "Convert files and create Jsons",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Convert files",
        "Create jsons",
        "Create unique Jsons"
      ],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/../backend",
        "statusbar": {
          "hide" : true
        }
      }
    },

  ],
  "inputs": [
    {
      "id": "jsonFile",
      "type": "promptString",
      "description": "Enter the JSON filename (e.g., 1020091)"
    }
  ]
}
