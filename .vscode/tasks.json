{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open Farmbot",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "cd Smile Farmbot && python main.py"
      ],
      "options": {
        "cwd": "${workspaceFolder}/../backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Backend",
      "type": "shell",
      "command": "code",
      "args": [
        "${workspaceFolder}/../backend"
      ],
      "group":{
        "kind": "none",
        "isDefault": false
      },
      "problemMatcher": [],
      "detail":"Opens the backend side for the website within vscode"
    },
    {
      "label": "Use new database",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "python 'Use_after_DDL.py'"
      ],
      "options": {
        "cwd": "${workspaceFolder}/../backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Json",
      "type": "shell",
      "command": "code",
      "args": [
        "${workspaceFolder}/dbManagement/jsons/${input:jsonFile}.json"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Open Json Eza",
      "type": "shell",
      "command": "code",
      "args": [
        "${workspaceFolder}/dbManagement/jsonsEZA/${input:jsonFile}.json"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ],
  "inputs": [
    {
      "id": "jsonFile",
      "type": "promptString",
      "description": "Enter the JSON filename (e.g., 1020091)"
    }
  ]
}
