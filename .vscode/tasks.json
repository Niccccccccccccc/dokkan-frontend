{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open Backend",
      "type": "shell",
      "command": "code",
      "args": [
        "${workspaceFolder}/../backend"
      ],
      "group":{
        "kind": "none",
        "isDefault": false
      },
      "problemMatcher": [],
      "detail":"Opens the backend side for the website within vscode"
    },
    {
      "label": "Use new database",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "python 'Use_after_DDL.py'"
      ],
      "options": {
        "cwd": "${workspaceFolder}/dbManagement"
      },
      "problemMatcher": []
    },
    {
      "label": "Open dbManagement in vscode",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "code dbManagement"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
